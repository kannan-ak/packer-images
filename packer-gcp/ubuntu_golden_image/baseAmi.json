
{
  "variables": {
    "source_image_family": "ubuntu-1804-lts",
    "machine_type": "n1-standard-1",
    "region": "var",
    "zone": "europe-west1-b",
    "project_id": "gcp-project",
    "image": "ubuntu-1804-golden-image-{{isotime \"2006-01-02\"}}"
  },

  "builders": [
    {
      "type": "googlecompute",
      "project_id": "{{user `project_id`}}",
      "machine_type": "{{ user `machine_type`}}",
      "source_image_family": "{{ user `source_image_family`}}",
      "region": "",
      "zone": "{{ user `zone`}}",
      "image_description": "Ubuntu 18.04 - cis hardened, os tuned by Packer",
      "image_name": "{{ user `image` }}",
      "disk_size": 50,
      "disk_type": "pd-standard",
      "ssh_username": "packer",
      "subnetwork": "vpc-eu-ws1-subnet",
      "image_labels": { "createdby" : "packer", "application" : "golden-image", "os" : "ubuntu", "version" : "1804" }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 10",
        "uname -a",
        "uptime"
       ]
    },
    {
      "type": "file",
      "source": "./cis_hardening",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "script": "baseinit.sh"
    },
    {
      "type": "shell",
      "script": "system-conf-ubuntu-1804-final.sh"
    },
  ]
}

